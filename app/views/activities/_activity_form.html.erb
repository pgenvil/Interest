<%= form_for(@activity) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

    <%= f.label :location_id %><br />
    <%= f.collection_select(:location_id, Location.all, :id, :address, {}, {:class => "foo"} ) %>
      <div class="field">
       <%= f.label :activity_content%><br>
        <%= f.text_area :content, placeholder: "Compose new activity..." %>
      </div>
      <%= f.submit "Publish Activity", class: "btn btn-primary" %>
    <% end %>