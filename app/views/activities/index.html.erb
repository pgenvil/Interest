<h1>The Activities list<h1>


<tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.title %>  </td>
        <td><%= activity.content %>  </td>
        <td><%= activity.location %>  </td>
       <td><%= link_to 'delete',activity,method: :delete, data: { confirm: 'Are you sure' } %></td>	
        </tr>
        </br>
      <% end %>
</tbody>
